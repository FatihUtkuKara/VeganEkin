<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2B38B"
    tools:context=".whatwouldieat.EatTodayActivity">

    <TextView
        android:id="@+id/randomText"

        android:layout_width="222dp"
        android:layout_height="150dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/eat_today_button"
        android:gravity="center"
        android:onClick="toRecipe"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#9C27B0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginTop="93dp"
        android:background="@drawable/eat_today_button"
        android:freezesText="false"
        android:onClick="startButton"
        android:text="Go"
        android:textAllCaps="false"
        android:textColor="#92BA92"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomText" />
    >


</androidx.constraintlayout.widget.ConstraintLayout>